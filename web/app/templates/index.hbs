<div class="container container-narrow">

  <div class="header clearfix">
    <nav>
      <ul class="nav nav-pills pull-right">
        <li role="presentation" class="active"><a href="#">Home</a></li>
        <li role="presentation"><a href="#">About</a></li>
        <li role="presentation"><a href="#">Contact</a></li>
      </ul>
    </nav>
    <h3 class="text-muted">Markdown Docs</h3>
  </div>

  <form class="form-horizontal">
    <fieldset>

      <div id="legend">
        <legend class="">Sign in</legend>
      </div>

      <div class="form-group">
        <label for="username" class="col-sm-2 control-label">Username</label>
        <div class="col-sm-10">
          {{input type="text" class="form-control" valueBinding="username" required="true" placeholder="Username or Email"}}
        </div>
      </div>

      <div class="form-group">
        <label for="password" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
          {{input type="password" class="form-control" valueBinding="password" required="true" placeholder="Password"}}
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label>
              {{input type="checkbox" valueBinding="remember" required="true"}} Remember me
            </label>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default" {{action "signIn"}} >Sign in</button>
          <a href="#">Forgot password?</a>
        </div>
      </div>

    </fieldset>
  </form>

    <form class="form-horizontal">
    <fieldset>

      <div id="legend">
        <legend class="">Sign up</legend>
      </div>

      <div class="form-group">
        <label for="fullname" class="col-sm-2 control-label">Full Name</label>
        <div class="col-sm-10">
          {{input type="text" class="form-control" valueBinding="fullname" required="true" placeholder="Full Name"}}
        </div>
      </div>

      <div class="form-group">
        <label for="username" class="col-sm-2 control-label">Username</label>
        <div class="col-sm-10">
          {{input type="text" class="form-control" valueBinding="username" required="true" placeholder="Username"}}
        </div>
      </div>

      <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
          {{input type="email" class="form-control" valueBinding="email" required="true" placeholder="Email"}}
        </div>
      </div>

      <div class="form-group">
        <label for="password" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
          {{input type="password" class="form-control" valueBinding="password" required="true" placeholder="Password"}}
        </div>
      </div>

      <div class="form-group">
        <label for="g-recaptcha" class="col-sm-2 control-label">Captcha</label>
        <div class="col-sm-10">
          <div class="g-recaptcha" data-sitekey="6LcJ1wcTAAAAAEAC7yQvOy5txDighAuVRpSYCOSV"></div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label>
              {{input type="checkbox" checked=tocAgreed required="true"}} I agree to <a href="#">terms and conditions</a>
            </label>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default" {{action "signUp"}}>Sign up</button>
        </div>
      </div>


    </fieldset>

    </form>

</div>
